    <Window.Resources >
        <Style TargetType="Button" x:Key="ButtonStyle">
            <Setter Property="Background" Value="Turquoise"></Setter>
            <Setter Property="Height" Value="100"></Setter>
            <Setter Property="Width" Value="200"></Setter>
            <Setter Property="Foreground" Value="Black"></Setter>
            <Setter Property="Margin" Value="10"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="BlueViolet" 
                                BorderBrush="DarkGoldenrod" 
                                BorderThickness="5"
                                CornerRadius="10">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <CheckBox Margin="10"></CheckBox>
                                <TextBlock Text="Click" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"></TextBlock>
                                <Button> Click</Button>
                            </StackPanel>
                            
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>
        <DataTemplate x:Key="ComboboxTemplate">  <!--  Nem tudom rátenni a comboboxra 
            Kijavitani otthon -->
            <StackPanel Orientation="Horizontal">

                <TextBlock Text="{Binding Username}" FontSize="20" FontWeight="Bold"></TextBlock>
                <TextBlock Text=" => " FontSize="20" FontWeight="Bold"></TextBlock>
                <TextBlock Text="{Binding Password}" FontSize="20" FontWeight="Bold"></TextBlock>
            </StackPanel>
            
        </DataTemplate> 
    </Window.Resources>
